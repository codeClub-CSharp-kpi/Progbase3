<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="BaseFont">
        <Setter Property="Control.FontFamily" Value="Trebuchet MS"/>
        <Setter Property="Control.FontSize" Value="24"/>
    </Style>

    <!--<Style TargetType="Button" BasedOn="{StaticResource ResourceKey=BaseFont}">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Padding" Value="15"/>
    </Style>-->

    <Style TargetType="Label" BasedOn="{StaticResource ResourceKey=BaseFont}">
        <Setter Property="Margin" Value="5 0"/>
    </Style>

    <Style TargetType="TextBox" BasedOn="{StaticResource ResourceKey=BaseFont}">
        <Setter Property="Margin" Value="5 0"/>
        <Setter Property="Padding" Value="5"/>
    </Style>

    <Style TargetType="TextBlock" BasedOn="{StaticResource ResourceKey=BaseFont}">
        <Setter Property="Margin" Value="5 0"/>
    </Style>

    <Style TargetType="DatePicker" BasedOn="{StaticResource ResourceKey=BaseFont}">
        <Setter Property="Margin" Value="5 0"/>
    </Style>


    <Style x:Key="isPos" TargetType="TextBox" BasedOn="{StaticResource ResourceKey=BaseFont}">
        <Style.Triggers>
            <DataTrigger Binding="{Binding SelectedReview.isPositive}" Value="True">
                <Setter Property="BorderBrush" Value="ForestGreen"/>
                <Setter Property="BorderThickness" Value="3"/>
            </DataTrigger>

            <DataTrigger Binding="{Binding SelectedReview.isPositive}" Value="False">
                <Setter Property="BorderBrush" Value="DarkRed"/>
                <Setter Property="BorderThickness" Value="3"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="Slider" BasedOn="{StaticResource ResourceKey=BaseFont}">
        <Setter Property="Margin" Value="10 0"/>
    </Style>

    <Style x:Key="RoundButton" TargetType="Button" BasedOn="{StaticResource BaseFont}">
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="20" />
            </Style>
        </Style.Resources>
    </Style>
    <Style TargetType="Button" BasedOn="{StaticResource RoundButton}">
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Background" Value="White"/>
    </Style>
    <Style x:Key="ColoredButtonTemplate" TargetType="Button" BasedOn="{StaticResource RoundButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="20" BorderThickness="1" Name="border">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush>
                                        <GradientStop Color="#faaca8" Offset="0.0"/>
                                        <GradientStop Color="#ddd6f3" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="#FF416C"></Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="BorderThickness" Value="8"></Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>